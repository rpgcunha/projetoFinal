@model IEnumerable<apoio_decisao_medica.Models.Medico>

@{
    ViewData["Title"] = "Médicos";
}

<h1>Médicos</h1>
@using (Html.BeginForm())
{
    <div class="row pb-3 pt-3">
        <div class="col-10">
            <div class="btnCriar">
                <a asp-action="Create">Adicionar Novo</a>
            </div>
        </div>
        <div class="col-2">
            @Html.TextBox("pesquisa", null, new {placeholder = "Pesquisa"})
        </div>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Utilizador.User)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
}
    </tbody>
</table>
