    @using (Html.BeginForm())
    {
        if (ViewBag.SUBMETER == 0)
        {
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm())
                    {
                        @:Exames
                        @Html.TextBox("pesquisaExam")
                        <br />
                        @foreach (var item in ViewBag.CATEXAM)
                        {
                            <a asp-route-idCatExam="@item.Id" asp-route-idProcesso="@ViewBag.PROCESSO.Id">@item.Nome</a> @:|
                        }
                        <br />
                        <div class="fixed-height overflow-auto">
                            @if (ViewBag.FILTROEXAM == null)
                            {
                                <p><i>Escolha uma letra para filtrar os exames</i></p>
                            }
                            else
                            {
                                if (ViewBag.FILTROEXAM.Count != 0)
                                {
                                    @foreach (var item in ViewBag.FILTROEXAM)
                                    {
                                        <label>
                                            @Html.RadioButton("exame",$"{item.Id}")
                                            @item.Nome
                                        </label>
                                        <br />
                                    }
                                }
                                else
                                {
                                    <p><i>Não existem exames nesta categoria!</i></p>
                                }
                            }
                        </div>
                        <br />
                        <br />
                        <input type="submit" value="Adicionar ao Processo" asp-route-idProcesso="@ViewBag.PROCESSO.Id">
                        <a asp-action="NovoExame" asp-route-idProcesso="@ViewBag.PROCESSO.Id">Adicionar Novo Exame</a>
                        <br />
                    }
                </div>

                <div class="col-6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Lista de Exames do Utente
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        @if (ViewBag.LISTAEXAM == null)
                        {
                            <tbody>
                                <tr>
                                    <th>
                                        <i>
                                            Ainda não foi adicionado nenhum exame ao processo.
                                        </i>
                                    </th>
                                </tr>
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                @foreach (var item in ViewBag.LISTAEXAM)
                                {
                                    <tr>
                                        <th>
                                            @item.Nome
                                        </th>
                                        <th>
                                            <input type="submit" value="-" asp-route-idProcesso="@ViewBag.PROCESSO.Id" asp-route-removerExam="@item.Id">
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                </div>
            </div>
            <input type="submit" value="Submeter" asp-route-numProcesso="@ViewBag.PROCESSO.NumeroProcesso" asp-route-submeter="1">
            if (ViewBag.CONTINUAR != null)
            {
                <p><i>Não Selecionou nenhum exame, deseja continuar?</i></p>
                <input type="submit" value="Sim" asp-route-numProcesso="@ViewBag.PROCESSO.NumeroProcesso" asp-route-submeter="1" asp-route-confirmacao="1">
                <input type="submit" value="Não" asp-route-numProcesso="@ViewBag.PROCESSO.NumeroProcesso" asp-route-submeter="0">
            }
        }
        else
        {
            <p><i>Submetido com sucesso, pode prosseguir!</i></p>
            <a asp-controller="Home" asp-action="Index">Concluir</a>
        }

    }
}