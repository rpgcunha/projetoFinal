@model apoio_decisao_medica.Models.Doenca

@{
    ViewData["Title"] = "Nova Doença";
}

<h1>Nova Doença</h1>

<h4>Doença</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovaDoenca">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatDoencaId" class="control-label"></label>
                <select asp-for="CatDoencaId" class="form-control" asp-items="ViewBag.CatDoencaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" asp-route-numProcesso="@ViewBag.PROC" class="btn btn-primary" asp-fragment="@ViewBag.ANCORA" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewBag.ReturnUrl">Voltar ao Processo</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
