@model apoio_decisao_medica.Models.Exame

@{
    ViewData["Title"] = "Novo Exame";
}

<h1>Novo Exame</h1>

<h4>Exame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoExame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CatExameId" class="control-label"></label>
                <select asp-for="CatExameId" class="form-control" asp-items="ViewBag.CatExameId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Inserir" asp-route-numProcesso="@ViewBag.PROC" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewBag.ReturnUrl">Voltar ao Processo</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
