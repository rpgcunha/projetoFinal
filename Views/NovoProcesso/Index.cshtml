<h2>Numero do Processo Nº @ViewBag.PROC</h2>
    <div class="container">
        <div class="row">
            <div class="col-6">
                @using (Html.BeginForm())
                {
                    <h4>Sintomas</h4>
                    @foreach (var item in ViewBag.CATSIN)
                    {
                    <a asp-route-idCatSint="@item.Id" asp-route-numProcesso="@ViewBag.PROC">@item.Nome</a> @:|
                    }
                    <br />
                    @if (ViewBag.FILTROSINT == null)
                    {
                        <p><i>Escolha uma letra para filtrar os sintomas</i></p>
                    }
                    else
                    {
                        if (ViewBag.FILTROSINT.Count != 0)
                        {
                            @foreach (var item in ViewBag.FILTROSINT)
                            {
                                <label>
                                    @Html.RadioButton("sintoma",$"{item.Id}")
                                    @item.Nome
                                </label>
                            }
                        }
                        else
                        {
                            <p><i>Não existem sintomas nesta categoria!</i></p>
                        }
                    }
                    <br />
                    <br />
                    <input type="submit" value="Adicionar ao Processo" asp-route-numProcesso="@ViewBag.PROC">
                    <a asp-action="NovoSintoma" asp-route-numProcesso="@ViewBag.PROC">Criar Novo Sintoma</a>
                    <br />
              }
           </div>
            <div class="col-6">
                @using (Html.BeginForm())
                {
                    <h4>Exames</h4>
                    @foreach (var item in ViewBag.CATEXAM)
                    {
                        <a asp-route-idCatExam="@item.Id" asp-route-numProcesso="@ViewBag.PROC">@item.Nome</a> @:|
                    }
                    <br />
                    @if (ViewBag.FILTROEXAM == null)
                    {
                        <p><i>Escolha uma letra para filtrar os exames</i></p>
                    }
                    else
                    {
                        if (ViewBag.FILTROEXAM.Count != 0)
                        {
                            @foreach (var item in ViewBag.FILTROEXAM)
                            {
                                <label>
                                    @Html.RadioButton("exame",$"{item.Id}")
                                    @item.Nome
                                </label>
                            }
                        }
                        else
                        {
                            <p><i>Não existem exames nesta categoria!</i></p>
                        }
                    }
                    <br />
                    <br />
                    <input type="submit" value="Adicionar ao Processo" asp-route-numProcesso="@ViewBag.PROC">
                <a asp-action="NovoExame" asp-route-numProcesso="@ViewBag.PROC">Criar Novo Exame</a>
                    <br />
                }
            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="col-6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Lista de Sintomas do Utente
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        @if (ViewBag.LISTASINT == null)
                        {
                            <tbody>
                                <tr>
                                    <th>
                                        <i>
                                            Ainda não foi adicionado nenhum sintoma ao processo.
                                        </i>
                                    </th>
                                </tr>
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                @foreach (var item in ViewBag.LISTASINT)
                                {
                                    <tr>
                                        <th>
                                            @item.Nome
                                        </th>
                                        <th>
                                        <input type="submit" value="-" asp-route-numProcesso="@ViewBag.PROC" asp-route-removerSint="@item.Id">
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                </div>
                <div class="col-6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Lista de Exames do Utente
                                </th>
                            </tr>
                        </thead>
                        @if (ViewBag.LISTAEXAM == null)
                        {
                            <tbody>
                                <tr>
                                    <th>
                                        <i>
                                            Ainda não foi adicionado nenhum exame ao processo.
                                        </i>
                                    </th>
                                </tr>
                            </tbody>
                        }
                        else
                        {
                            <tbody>
                                @foreach (var item in ViewBag.LISTAEXAM)
                                {
                                    <tr>
                                        <th>
                                            @item.Nome
                                        </th>
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                </div>
            }
        </div>
    </div>

@using (Html.BeginForm())
{
    <input type="submit" value="Apresentar Sugestões" asp-route-numProcesso="@ViewBag.PROC" asp-route-sug="1">
    <br />
    <br />
    @if (ViewBag.SUGESTAO1 != null)
    {
        <h3>Sugestão</h3>
        <h5>Os Sintomas tem @ViewBag.PERCENTAGEMSINT% de correspondência aos seguintes diagnósticos:</h5>
        <div class="container">
            @foreach (var item in ViewBag.SUGESTAO1)
            {
                <div class="row border">
                    <div class="col-4">
                        <h5>@item.Nome</h5>
                        <label>Especialidade: @item.CatDoenca.Nome</label>
                    </div>
                    <div class="col-3">
                        <h6>Sintomas:</h6>
                        @foreach (var itemS in ViewBag.TODOSSINTOMAS)
                        {
                            if (item.Id == itemS.DoencaId)
                            {
                                int sim = 0;
                                foreach (var itemX in ViewBag.LISTASINT)
                                {

                                    if (itemS.SintomaId == itemX.Id)
                                    {
                                        <label class="text-success">
                                            @itemS.Sintoma.Nome ->
                                            @itemS.Relevancia%
                                        </label>
                                        sim = 1;
                                        break;
                                    }
                                }
                                if (sim == 0)
                                {
                                    <label class="text-secondary">
                                        @itemS.Sintoma.Nome ->
                                        @itemS.Relevancia%
                                    </label>
                                }
                                <br />
                            }
                        }
                    </div>
                    <div class="col-3">
                        Exames Sugeridos:
                    </div>
                    <div class="col-2">
                        Decisão<br>
                        @Html.RadioButton("decisao",$"{item.Id}")
                    </div>
                </div>                
            }
        </div>
        <br />
        <br />
        <input type="submit" value="Outras Doenças" asp-route-numProcesso="@ViewBag.PROC" asp-route-maisDoencas="1" asp-route-sug="1">
        <br />
        <br />
        <br />
        <br />
        @if (ViewBag.CATDOENCA != null)
        {
            @Html.DropDownList("IdCatDoenca", (SelectList)ViewBag.CATDOENCA)
            <input type="submit" value="Aplicar" asp-route-numProcesso="@ViewBag.PROC" asp-route-maisDoencas="1" asp-route-sug="1">
            <br />
            <br />
            if (ViewBag.MAISDOENCAS != null)
            {
                <div class="container">
                    @foreach (var item in ViewBag.MAISDOENCAS)
                    {
                        <div class="row border">
                            <div class="col-4">
                                <h5>@item.Nome</h5>
                                <label>Especialidade: @item.CatDoenca.Nome</label>
                            </div>
                            <div class="col-3">
                                <h6>Sintomas:</h6>
                                @foreach (var itemS in ViewBag.TODOSSINTOMAS)
                                {
                                    if (item.Id == itemS.DoencaId)
                                    {
                                        int sim = 0;
                                        foreach (var itemX in ViewBag.LISTASINT)
                                        {

                                            if (itemS.SintomaId == itemX.Id)
                                            {
                                                <label class="text-success">
                                                    @itemS.Sintoma.Nome ->
                                                    @itemS.Relevancia%
                                                </label>
                                                sim = 1;
                                                break;
                                            }
                                        }
                                        if (sim == 0)
                                        {
                                            <label class="text-secondary">
                                                @itemS.Sintoma.Nome ->
                                                @itemS.Relevancia%
                                            </label>
                                        }
                                        <br />
                                    }
                                }
                            </div>
                            <div class="col-3">
                                Exames Sugeridos:
                            </div>
                            <div class="col-2">
                                Decisão<br>
                                @Html.RadioButton("decisao", $"{item.Id}")
                            </div>
                        </div>
                    }
                </div>
            }
            <br />
            <br />
        }
        <input type="submit" value="Fechar Processo" asp-route-numProcesso="@ViewBag.PROC" asp-route-maisDoencas="@ViewBag.MAIS" asp-route-sug="1" asp-route-fechar="1">
        @if (ViewBag.ERRO != null)
        {
            <p><i>@ViewBag.ERRO</i></p>
        }
    }
}
