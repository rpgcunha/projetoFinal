@model IEnumerable<apoio_decisao_medica.ViewsModels.HistoricoProcesso>

<h2>Detalhes do Utente</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Numero de Utente</th>
            <th>Data de Nascimento</th>
            <th>Genero</th>
            <th>Cidade</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>@ViewBag.UTENTE.Nome</th>
            <th>@ViewBag.UTENTE.NumeroUtente</th>
            <th>@ViewBag.UTENTE.DataNascimento</th>
            <th>@ViewBag.UTENTE.Genero</th>
            <th>@ViewBag.UTENTE.Cidade</th>
        </tr>
    </tbody>
</table>
<div class="btnCriar">
    <a asp-controller="Utentes" asp-action="Edit" asp-route-id="@ViewBag.UTENTE?.Id">Editar Dados</a>
</div>
<br />
<br />
<div class="btnCriar">
    <a asp-controller="NovoProcesso" asp-action="CriarProcesso" asp-route-idUtente="@ViewBag.UTENTE?.Id">Novo Processo</a>
</div>
@using (Html.BeginForm())
{
    <h3>Histórico de Processos do Utente</h3>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Numero do Processo</th>
                <th>Data de Abertura</th>
                <th>Data de Fecho</th>
                <th>Sintomas</th>
                <th>Diagnóstico</th>
                <th>Médico</th>
                <th>Hospital</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        @if (item.DataFecho == null)
                        {
                            <th><a asp-controller="NovoProcesso" asp-action="Index" asp-route-idProcesso="@item.Id" asp-route-numProcesso="@item.numProcesso">@item.numProcesso</a></th>
                        }
                        else
                        {
                            <th><a asp-controller="Processo" asp-action="Index" asp-route-idProcesso="@item.Id">@item.numProcesso</a></th>
                        }
                        <th>@item.DataAbertura</th>
                        <th>@item.DataFecho</th>
                        <th>@if (ViewBag.LISTA != item.Id)
                            {
                            <input type="submit" value="+" asp-route-idProc="@item.Id">
                        }
                        else
                        {
                            if (ViewBag.LISTA == item.Id)
                            {
                                @foreach (var itemS in ViewBag.SINTOMAS)
                                {
                                    @itemS
                                    <br />
                                }
                            }
                        }
                        </th>
                        <th>@item.Doenca</th>
                        <th>@item.Medico</th>
                        <th>@item.Hospital</th>
                    </tr>
            }           
        </tbody>
    </table>
}
@ViewBag.TESTE
<br />
<br />
<div class="btnCriar">
    <a asp-action="Index">Voltar</a>
</div>
