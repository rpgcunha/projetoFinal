@model IEnumerable<apoio_decisao_medica.Models.Processo>

<h2>Detalhes do Utente</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Numero de Utente</th>
            <th>Data de Nascimento</th>
            <th>Genero</th>
            <th>Cidade</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>@ViewBag.UTENTE.Nome</th>
            <th>@ViewBag.UTENTE.NumeroUtente</th>
            <th>@ViewBag.UTENTE.DataNascimento</th>
            <th>@ViewBag.UTENTE.Genero</th>
            <th>@ViewBag.UTENTE.Cidade</th>
        </tr>
    </tbody>
</table>
<div class="btnCriar">
    <a asp-controller="Utentes" asp-action="Edit" asp-route-id="@ViewBag.UTENTE?.Id">Editar Dados</a>
</div>
<br />
<br />
<div class="btnCriar">
    <a asp-controller="" asp-action="">Novo Processo</a>
</div>

<h3>Histórico de Processos do Utente</h3>
<br />
<table class="table">
    <thead>
        <tr>
            <th>Numero do Processo</th>
            <th>Data de Abertura</th>
            <th>Data de Fecho</th>
            <th>Sintomas</th>
            <th>Diagnóstico</th>
            <th>Médico</th>
            <th>Hospital</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.UtenteId == ViewBag.ID)
            {
                <tr>
                    <th>@item.NumeroProcesso</th>
                    <th>@item.DataHoraAbertura</th>
                    <th>@item.DataHoraFecho</th>
                    <th>@foreach (var itemS in ViewBag.SINTOMAS)
                        {
                            @itemS
                            <br />
                        }
                    </th>
                    <th>@item.DoencaId</th>
                    <th>@item.MedicoId</th>
                    <th>@item.HospitalId</th>
                </tr>
            }
        }           
    </tbody>
</table>
<br />
<br />
<div class="btnCriar">
    <a asp-action="Index">Voltar</a>
</div>
